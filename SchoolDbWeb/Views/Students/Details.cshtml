@model SchoolDbWeb.Models.Student

@{
    ViewData["Title"] = "Student Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            First Name
        </dt>
        <dd class="col-sm-10">
            @Model.FirstName
        </dd>
        <dt class="col-sm-2">
            Last Name
        </dt>
        <dd class="col-sm-10">
            @Model.LastName
        </dd>
        <dt class="col-sm-2">
            Class Stream
        </dt>
        <dd class="col-sm-10">
            @Model.ClassStream.ClassName
        </dd>
    </dl>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
