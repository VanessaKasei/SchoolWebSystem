@model IEnumerable<SchoolDbWeb.Models.Student>

@{
    ViewData["Title"] = $"Students in {ViewData["ClassStreamName"]}";
}

<h1>@ViewData["Title"]</h1>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Class Stream</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.FirstName</td>
                    <td>@student.LastName</td>
                    <td>@student.ClassStream.ClassName</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No students found for this class stream.</p>
}
