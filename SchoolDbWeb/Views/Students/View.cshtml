@model IEnumerable<SchoolDbWeb.Models.Student>

@{
    ViewData["Title"] = "Students";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>StudentId</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>ClassStream</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.StudentId</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.ClassStream.ClassName</td> <!-- Assuming you want to show the class stream name -->
                <td>
                    <a asp-action="Details" asp-route-id="@item.StudentId" class="btn btn-info">View</a>
                    <a asp-action="Edit" asp-route-id="@item.StudentId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.StudentId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
